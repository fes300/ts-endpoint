{
  "compilerOptions": {
    "module": "es6",
    "declaration": true,
    "target": "es6",
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "moduleResolution": "Node",
    "typeRoots": ["node_modules/@types", "node_modules/vitest/globals"]
  },
  "exclude": ["node_modules", "**/.stories.tsx", "vitest.config.mjs", "vitest.workspace.mts"],
  "files": ["./typings.d.ts"]
}
