{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "website"
  ],
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@types/jest": "^29.5.0",
    "dts-jest": "^26.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "postinstall": "husky install",
    "io-error": "yarn workspace ts-io-error",
    "endpoint": "yarn workspace ts-endpoint",
    "browser": "yarn workspace ts-endpoint-browser",
    "express": "yarn workspace ts-endpoint-express",
    "website": "yarn workspace @ts-endpoint/docs",
    "build": "yarn workspaces foreach -v run build",
    "test": "yarn workspaces foreach run test",
    "release": "release-it",
    "pre-release": "release-it --preRelease",
    "npm-publish": "yarn workspaces foreach run npm-publish",
    "postversion": "yarn workspaces foreach run postversion",
    "npm-publish-beta": "yarn workspaces foreach run npm-publish-beta"
  },
  "dependencies": {
    "fp-ts": "^2.13.1",
    "io-ts": "^2.2.20"
  },
  "packageManager": "yarn@3.5.0"
}
